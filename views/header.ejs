<header class="header" style="margin-bottom: 25px">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">StudyChat</a>
        </div>

        <% if(session.user) { %>
          <ul class="nav navbar-nav">
            <li><a style="cursor: default;">Hallo <%= session.user.username %></a></li>
          </ul>
        <% } %>
        
        <ul class="nav navbar-nav navbar-right">
          <% if(!session.user) {%>
          <li><a href="#" onclick="openLoginDialog()"><span class="glyphicon glyphicon-log-in"></span>Anmelden</a></li>
          <% } else { %>
          <li><a href="#" onclick="logout()"><span class="glyphicon glyphicon-log-out"></span>Abmelden</a></li>
          <% } %>
        </ul>
      </div>
    </nav>
</header>